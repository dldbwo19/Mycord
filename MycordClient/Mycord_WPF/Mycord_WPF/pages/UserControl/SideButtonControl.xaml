                                                        <DiscreteObjectKeyFrame.Value>
                                                            <CornerRadius BottomLeft="50" BottomRight="50" TopLeft="50" TopRight="50" />
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>

